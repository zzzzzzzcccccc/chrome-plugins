{
  "manifest_version": 3,
  "name": "Screenshot OCR",
  "description": "Screenshot and OCR for chrome plugin",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["js/inject.js"]
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": ["activeTab", "storage", "tabs", "scripting", "windows"],
  "optional_host_permissions": ["https://*/*", "http://*/*"]
}
